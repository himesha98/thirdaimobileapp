<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Entertainment">
    <RelativeLayout
        android:id="@+id/search_wrapper"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:elevation="15dp"
        android:background="@drawable/searchbarbackground"
        android:minHeight="15dp"
        android:paddingTop="5dp"

        android:paddingBottom="0dp">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/headerlogo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/applogo"/>
        <TextView
            android:layout_centerVertical="true"

            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/headerlogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Third AI"
            android:textSize="30sp"
            android:textColor="@color/redprimary"
            />

        <ImageButton
            android:layout_centerVertical="true"

            android:id="@+id/user_room"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/user"
            android:contentDescription="@string/user_room"
            android:scaleType="fitXY" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_wrapper"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/en_row1"
            android:layout_centerHorizontal="true">
            <RelativeLayout
                android:id="@+id/en_cat_music"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/en_cat"
                android:elevation="3dp">
                <ImageView
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:src="@drawable/music_en"
                    android:id="@+id/en_music_icon"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/en_music_sin"
                    android:text="සංගීතය"
                    android:layout_below="@id/en_music_icon"
                    android:textColor="@color/redprimary"
                    android:textSize="20sp"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:fontFamily="@font/medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/en_music_eng"
                    android:layout_below="@id/en_music_sin"
                    android:text="Songs"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/singlegradeback"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/en_cat"
                android:elevation="3dp">
                <ImageView
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:src="@drawable/podcast"
                    android:id="@+id/en_pod_icon"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/en_pod_sin"
                    android:text="සංවාදයන්"
                    android:layout_below="@id/en_pod_icon"
                    android:textColor="@color/redprimary"
                    android:textSize="20sp"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/en_pod_eng"
                    android:layout_below="@id/en_pod_sin"
                    android:text="Podcasts"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/medium"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/singlegradeback"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/en_row2"
            android:layout_marginTop="40dp"
            android:layout_below="@id/en_row1">

            <RelativeLayout
                android:id="@+id/en_cat_movies"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/en_cat"
                android:elevation="3dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">
                <ImageView
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:src="@drawable/movies"
                    android:id="@+id/en_movies_icon"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/en_movies_sin"
                    android:text="සිනමාව"
                    android:layout_below="@id/en_movies_icon"
                    android:textColor="@color/redprimary"
                    android:textSize="20sp"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/en_movies_eng"
                    android:layout_below="@id/en_movies_sin"
                    android:text="Movies"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/medium"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/singlegradeback"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/en_cat_news"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/en_cat"
                android:elevation="3dp"
                android:layout_marginRight="30dp">
                <ImageView
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:src="@drawable/news"
                    android:id="@+id/en_news_icon"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/en_news_sin"
                    android:text="පුවත්"
                    android:layout_below="@id/en_news_icon"
                    android:textColor="@color/redprimary"
                    android:textSize="20sp"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/en_news_eng"
                    android:layout_below="@id/en_news_sin"
                    android:text="News"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textAlignment="center"
                    android:background="@drawable/singlegradeback"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/medium"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <Button
        android:elevation="10dp"
        android:background="@drawable/microphoneback"
        android:id="@+id/microphone"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="Microphone"
        android:textSize="24sp" />
</RelativeLayout>