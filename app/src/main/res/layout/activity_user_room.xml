<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserRoom">

    <RelativeLayout
        android:id="@+id/search_wrapper"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:elevation="15dp"
        android:background="@drawable/searchbarbackground"
        android:minHeight="15dp"
        android:paddingTop="5dp"

        android:paddingBottom="0dp">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/headerlogo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_toLeftOf="@id/appName"
            android:src="@drawable/applogo"/>
        <TextView
            android:id="@+id/appName"
            android:layout_centerVertical="true"
android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Third AI"
            android:textSize="30sp"
            android:textColor="@color/redprimary"
            />



    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ur_list"
        android:background="@drawable/ur_wrapper"
        android:elevation="5dp"
        android:layout_below="@id/search_wrapper"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:paddingLeft="0dp">
        <RelativeLayout
            android:id="@+id/ur_userdata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/ur_useradata"
            android:elevation="5dp"
            android:paddingBottom="5dp"

            >
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:paddingLeft="30dp"
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ur_maintags">
                <TextView
                    android:id="@+id/ur_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/redprimary"
                    android:text="Username"
                    android:textSize="24sp"
                    android:fontFamily="@font/regular"/>
                <TextView
                    android:id="@+id/ur_tagname"
                    android:layout_below="@id/ur_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@Username"
                    android:textSize="20sp"
                    android:fontFamily="@font/medium"/>

            </RelativeLayout>
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/avatar"
                android:elevation="5dp"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>
        <LinearLayout
            android:paddingLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:layout_below="@id/ur_userdata"
            android:id="@+id/ur_lessons_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/ur_lessons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saved Lessons"
                android:textSize="22sp"
                android:fontFamily="@font/medium"/>

        </LinearLayout>
        <LinearLayout
            android:paddingLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/ur_lessons_wrapper"
            android:id="@+id/ur_music_wrapper"
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/ur_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favourite Music"
                android:textSize="22sp"
                android:fontFamily="@font/medium"/>

        </LinearLayout>
        <LinearLayout
            android:paddingLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/ur_music_wrapper"
            android:id="@+id/ur_podcasts_wrapper"
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/ur_movies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favourite Podcasts"
                android:textSize="22sp"
                android:fontFamily="@font/medium"/>

        </LinearLayout>



        <LinearLayout
            android:paddingLeft="30dp"
        android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
        android:layout_below="@id/ur_podcasts_wrapper"
        android:id="@+id/ur_library_wrapper"
      android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ur_library"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Books"
            android:textSize="22sp"
            android:fontFamily="@font/medium"/>

    </LinearLayout>



        <LinearLayout
            android:paddingLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_below="@id/ur_library_wrapper"
            android:id="@+id/ur_seminars_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/ur_seminars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Seminars"
                android:textSize="22sp"
                android:fontFamily="@font/medium"/>

        </LinearLayout>





    </RelativeLayout>

    <RelativeLayout
        android:layout_marginBottom="75dp"
        android:layout_width="250dp"
        android:layout_height="450dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ur_back">

    </RelativeLayout>
    <Button
        android:elevation="10dp"
        android:background="@drawable/microphoneback"
        android:id="@+id/microphone"

        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="Microphone"
        android:textSize="24sp" />
</RelativeLayout>